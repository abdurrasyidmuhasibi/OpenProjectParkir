<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.parkir">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.History"></activity>
        <activity android:name=".activities.EditProfil" />
        <activity android:name=".activities.EditPenugasan" />

        <activity android:name=".activities.Firebase" />

        <activity android:name=".activities.Success" />
        <activity android:name=".activities.DaftarPenugasan" />
        <activity android:name=".activities.DaftarKangParkir" />
        <activity android:name=".activities.DaftarUser" />
        <activity
            android:name=".activities.SettingAkun"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.DetailPembayaran"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.QrCode"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.HomeKangParkir"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.HomeUser"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LoginPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".firebase.getNotification"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>